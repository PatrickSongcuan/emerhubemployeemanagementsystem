<header class="c-header c-header-light c-header-fixed c-header-with-subheader">
    <ul class="c-header-nav d-md-down-none"></ul>
    <ul class="c-header-nav mfs-auto">
        <li class="c-header-nav-item px-3 c-d-legacy-none">
            <button class="c-class-toggler c-header-nav-btn" type="button" id="header-tooltip" data-target="body" data-class="c-dark-theme" data-toggle="c-tooltip" data-placement="bottom" title="Toggle Light/Dark Mode">
                <svg class="c-icon c-d-dark-none">
                </svg>
                <svg class="c-icon c-d-default-none">
                </svg>
            </button>
        </li>
    </ul>
    <div class="c-subheader justify-content-between px-3">
        <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item"><a href="#"> User </a></li>
            <li class="breadcrumb-item"><a href="#"> Manage Companies </a></li>
            <li class="breadcrumb-item active">Edit Company</li>
        </ol>
    </div>
</header>
<div class="c-body">
    <div class="container-fluid">
        <div id="ui-view">
            <div class="fade-in">
                <div class="card">
                    <div class="card-header"><strong>Edit Company</strong></div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="name">Company Name</label>
                                    <input class="form-control" id="name" type="text" placeholder="Company Name">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="name">Company Address</label>
                                    <input class="form-control" id="name" type="text" placeholder="Company Address">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="name">Contact Person in Client</label>
                                    <input class="form-control" id="name" type="text" placeholder="Contact Person in Client">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="name">Contact Person in Emerhub</label>
                                    <input class="form-control" id="name" type="text" placeholder="Contact Person in Emerhub">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label for="name">Contact Number</label>
                                    <input class="form-control" id="name" type="text" placeholder="Contact Number">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label for="name">Sign Date</label>
                                    <input class="form-control" id="name" type="text" placeholder="Sign Date">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label for="name">Number of Working Days per Year</label>
                                    <select class="form-control">
                                        <option> 313 </option>
                                        <option> 261 </option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-primary" type="submit"> Submit </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
