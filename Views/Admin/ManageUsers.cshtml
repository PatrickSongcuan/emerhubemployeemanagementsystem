                            <div class="card-header">
                                <div>
                                    <h4>Manage Users<a href="@Url.Action("AddUser", "Admin")" class="btn btn-info" style="float:right;" type="button">Add User</a></h4>
                                </div>
                            </div>
                            <div class="card-body">
                                <table id="test">
                                    <thead>
                                        <tr>
                                            <th>User ID</th>
                                            <th>Username</th>
